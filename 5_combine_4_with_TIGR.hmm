#this one is the aligment with the file contaning the hmmer of all aligments
#!/bin/bash

# Caminhos para os arquivos HMM
HMM_PROFILE1="/media/share/MGS/VM_data/mmoreira/Projects/Distribution_of_RHS_toxins_in_metagenomes/4_hmmer_profiles_from_filterd_sequence/combined_alignment.hmm"
TIGR_PROFILE="/media/share/MGS/VM_data/mmoreira/Projects/Distribution_of_RHS_toxins_in_metagenomes/Hmmer_profile/TIGR03696.hmm"
COMBINED_HMM_PROFILE="/media/share/MGS/VM_data/mmoreira/Projects/Distribution_of_RHS_toxins_in_metagenomes/5_bee_core_base_with_tigr/Rhs_core_database_bees"

# Criar o arquivo combinado HMM
cat "$HMM_PROFILE1" "$TIGR_PROFILE" > "$COMBINED_HMM_PROFILE"

# Verificar se o arquivo combinado foi criado corretamente
if [ -f "$COMBINED_HMM_PROFILE" ]; then
    echo "Perfis HMM combinados com sucesso: $COMBINED_HMM_PROFILE"
else
    echo "Erro ao combinar os perfis HMM"
    exit 1
fi
