COMBINED_ALIGNMENT_FILE="/media/share/MGS/VM_data/mmoreira/Projects/Distribution_of_RHS_toxins_in_metagenomes/combined_alignment.afa"
OUTPUT_DIR="/media/share/MGS/VM_data/mmoreira/Projects/Distribution_of_RHS_toxins_in_metagenomes/4_hmmer_profiles_from_all_filterd_sequence"

# Cria os diretórios necessários se não existirem
mkdir -p "$ALIGNMENTS_DIR"
mkdir -p "$OUTPUT_DIR"

# # Limpar ou criar o arquivo de sequências combinadas
