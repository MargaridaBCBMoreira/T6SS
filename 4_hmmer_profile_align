# Criar o perfil HMM a partir do alinhamento combinado
HMM_PROFILE="${OUTPUT_DIR}/combined_alignment.hmm"

echo "Criando perfil HMM para o alinhamento combinado..."
hmmbuild "$HMM_PROFILE" "$COMBINED_ALIGNMENT_FILE"

